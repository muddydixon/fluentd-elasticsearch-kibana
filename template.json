{
  "template": "*-*",
  "mappings": {
    "_default_": {
      "dynamic_templates": [
        {
          "string_template" : {
            "match" : "*",
            "mapping": {
              "type": "multi_field",
              "fields": {
                "{name}": {
                  "type": "string",
                  "index" : "analyzed"
                },
                "full": {
                  "type": "string",
                  "index" : "not_analyzed"
                }
              }
            },
            "match_mapping_type" : "string"
          }
        }
      ],
      "properties" : {
        "@timestamp" : { "type" : "date", "index" : "not_analyzed" }
      }
    }
  }
}
